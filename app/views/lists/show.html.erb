<div class="container col-6 my-5">

<h1><%= @list.name %></h1>

<% @list.movies.each do |movie| %>
  <div class="card-product">
    <%= image_tag "#{movie.poster_url}" %>
    <div class="card-product-infos">
      <h2><%= movie.title %></h2>
      <p><%= movie.overview %></p>
      <p><%= movie.rating %></p>
      <%= link_to "Delete",
      bookmark_path(Bookmark.find_by(movie: movie, list: @list)),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  </div>
<% end %>

<%= link_to "See all lists", lists_path, class: "btn btn-primary" %>

<%= link_to "Add a movie to my list", new_list_bookmark_path(@list), class: "btn btn-primary" %>

</div>

